<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="144dp">

        <TextView
            android:id="@+id/news_title"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:maxLines="2"
            android:textSize="16sp"
            android:textColor="@android:color/black"/>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/news_time_icon"
                android:layout_width="13dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-2dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/time"/>

            <TextView
                android:id="@+id/news_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:textSize="14sp"
                android:textColor="#888"
                android:layout_toRightOf="@+id/news_time_icon" />

            <ImageView
                android:id="@+id/news_clicks_icon"
                android:layout_width="14dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-2dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/clicks"
                android:layout_toLeftOf="@+id/news_clicks" />

            <TextView
                android:id="@+id/news_clicks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="12dp"
                android:minWidth="40dp"
                android:textSize="14sp"
                android:textColor="#888"
                android:layout_toLeftOf="@+id/news_comments_icon" />

            <ImageView
                android:id="@+id/news_comments_icon"
                android:layout_width="14dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-1dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/comments"
                android:layout_toLeftOf="@+id/news_comments" />

            <TextView
                android:id="@+id/news_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:minWidth="20dp"
                android:textSize="14sp"
                android:textColor="#888"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/news_thumb"
        android:layout_width="112dp"
        android:layout_height="84dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="16dp"
        android:layout_gravity="right"
        android:scaleType="centerCrop"
        android:clickable="false" />

</FrameLayout>
